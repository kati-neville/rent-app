{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"],
			"_assets": ["src/assets/*"],
			"_components": ["src/components/*"],
			"_navigation": ["src/navigation/*"],
			"_screens": ["src/screens/*"],
			"_services": ["src/services/*"],
			"_styles": ["src/styles/*"],
			"_utils": ["src/utils/*"]
		}
	}
}
